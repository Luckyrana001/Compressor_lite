<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            android:gravity="center"
            android:src="@drawable/sad_icon" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Do you have one moment?" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="We are tiny team working hard to provide you free App.\n\nPlease Rate Us."
            android:textSize="@dimen/text_small" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/light_grey"
            android:src="@drawable/demo" />


        <!-- <RatingBar
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:id="@+id/ratingBar"

             android:layout_marginLeft="15dp"
             android:layout_marginTop="10dp"


             android:layout_gravity="center|center_horizontal|center_vertical"
             style="@style/feedbackRatingBar"
             android:numStars="5"
             android:stepSize="1"
             android:isIndicator="false"

             android:layout_marginRight="15dp"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="10dp"

            android:background="@color/divider_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/do_not_ask_again_cb"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center|center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Don't ask to rate again" />


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>