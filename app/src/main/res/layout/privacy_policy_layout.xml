<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <id.zelory.compressor.sample.JustifiedTextView
                android:id="@+id/txt_declaration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:lineSpacingMultiplier="1.1"
                android:linksClickable="true"
                android:padding="8dp"
                android:text="By clicking on ‘Submit’ Button, I hereby declare that I have read the Terms &amp; Conditions and I am agreed on above privacy policy to use this app."
                android:textSize="@dimen/text_extra_small" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                style="@style/MyButtonStyle"
                android:onClick="AcceptPrivacyPolicy"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
